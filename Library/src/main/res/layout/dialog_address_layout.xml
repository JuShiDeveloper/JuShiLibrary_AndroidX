<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/address_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000" />

    <LinearLayout
        android:id="@+id/ll_address_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:text="取消"
                android:textColor="#666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:text="确定"
                android:textColor="#5396FF"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <com.jushi.library.customView.wheelview.WheelView
                android:id="@+id/wv_province"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:pickerview_lineSpacingMultiplier="2.2"
                app:pickerview_textColorCenter="#4F5E6F"
                app:pickerview_textSize="16sp" />

            <com.jushi.library.customView.wheelview.WheelView
                android:id="@+id/wv_city"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:pickerview_lineSpacingMultiplier="2.2"
                app:pickerview_textColorCenter="#4F5E6F"
                app:pickerview_textSize="16sp" />

            <com.jushi.library.customView.wheelview.WheelView
                android:id="@+id/wv_area"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:pickerview_lineSpacingMultiplier="2.2"
                app:pickerview_textColorCenter="#4F5E6F"
                app:pickerview_textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>